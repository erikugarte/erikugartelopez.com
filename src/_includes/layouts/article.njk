---
layout: layouts/base.njk
navActive: cuaderno
ogType: article
---
    <div class="article-header">
        <div class="article-header-inner">
            <a href="/cuaderno/" class="article-back" data-lang="es">← Cuaderno</a>
            <a href="/cuaderno/" class="article-back" data-lang="en">← Notebook</a>
            <p class="article-date" data-lang="es">{{ date | dateEs }}</p>
            <p class="article-date" data-lang="en">{{ date | dateEn }}</p>
            <h1 class="article-h1" data-lang="es">{{ title_es }}</h1>
            <h1 class="article-h1" data-lang="en">{{ title_en }}</h1>
        </div>
    </div>

    <div class="article-body">
        <hr class="article-separator">
        <div class="article-body-inner" data-lang="es">
            {{ content | safe }}
        </div>

        <div class="article-body-inner" data-lang="en">
            {{ body_en | md | safe }}
        </div>
    <section style="padding-top: 0;">
    <div class="section-inner">
        <p class="section-label" data-lang="es">Más en el cuaderno</p>
        <p class="section-label" data-lang="en">More in the notebook</p>
        {%- for post in collections.cuaderno %}
        {%- if post.url !== page.url %}
        <a href="{{ post.url }}" class="cuaderno-teaser" data-lang="es">
            <p class="cuaderno-date">{{ post.data.date | dateEs }}</p>
            <h3 class="cuaderno-title">{{ post.data.title_es }}</h3>
            <p class="cuaderno-excerpt">{{ post.data.excerpt_es | safe }}</p>
            <span class="cuaderno-read">Leer →</span>
        </a>
        <a href="{{ post.url }}" class="cuaderno-teaser" data-lang="en">
            <p class="cuaderno-date">{{ post.data.date | dateEn }}</p>
            <h3 class="cuaderno-title">{{ post.data.title_en }}</h3>
            <p class="cuaderno-excerpt">{{ post.data.excerpt_en | safe }}</p>
            <span class="cuaderno-read">Read →</span>
        </a>
        {%- endif %}
        {%- endfor %}
    </div>
</section>
    </div>
